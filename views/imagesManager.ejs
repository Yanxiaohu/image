        //     error: function (mas, textStatus, errorThrown) {
        //         layer.msg('网络错误，请联系管理员');
        //         layer.close(loadStart);
        //     }
        // });
        document.getElementById('logoutBtn').onclick = function () {
            layer.open({
                title: '',
                content: '确认推出登录吗？',
                yes: function (index) {
                    localStorage.setItem('token', '');
                    window.location.href = '/';
                    layer.close(index);
                },
            });
        }
    });
    layui.use('upload', function () {
        const upload = layui.upload;
        //执行实例
        upload.render({
            elem: '#upLoadButton' //绑定元素
            , url: '/upload' //上传接口
            , before: function () {
                layer.load();
            }
            , done: function (res) {
                //上传完毕回调
                layer.closeAll('loading'); //关闭loading
                layer.msg(res.message);
            }
            , error: function (err) {
                //请求异常回调
                layer.msg(err.message);
                layer.closeAll('loading'); //关闭loading
            }
            , accept: 'file'
        });
    });
    layui.use('table', function () {
        const table = layui.table;
        //第一个实例
        table.render({
            elem: '#demo'
            , url: '/getImages' //数据接口
            , page: true //开启分页
            , cols: [[ //表头
                {field: 'id', title: 'ID'}
                , {field: 'image_name', title: '图片名称'}
                , {field: 'up_time', title: '上传时间'}
                , {field: 'managername', title: '操作员'}
                , {fixed: 'right', width: 150, align: 'center', toolbar: '#barDemo'}
            ]]
            , done: function (res, page, count) {
                const $ = layui.$;
                $("[data-field='usertype']").children().each(function () {
                    if ($(this).text() == '1') {
                        $(this).text("超级管理员")
                    } else if ($(this).text() == '2') {
                        $(this).text("普通用户")
                    }
                })
            }
        });
        //监听行工具事件
        table.on('tool(test)', function (obj) { //注：tool 是工具条事件名，test 是 table 原始容器的属性 lay-filter="对应的值"
            const {url, id, image_name} = obj.data
            console.log(obj.event);
            if (obj.event == 'del') {
                const message = '真的删除图片' + '<label style="color: darkred">' + image_name + '</label>' + '吗？';
                layer.confirm(message, function (index) {
                    const delLoading = layer.load(1);
                    layui.$.ajax({
                        url: '/delImage', //提交接口
                        type: 'post',
                        data: {del_id: id},
                        success: function (res) {
                            layer.close(delLoading);
                            layer.close(index);
                            if (res.code == 0) {
                                obj.del();
                            } else {
                                layer.msg(JSON.stringify(res.message), {icon: 2});
                            }
                        },
                        error: function (mas, textStatus, errorThrown) {
                            layer.msg("请求失败");
                            layer.close(delLoading);
                            layer.close(index);
                        }
                    });
                });
            } else {
                window.open(url, '_blank');
            }
        });

    });
</script>
</script>
<form class="layui-form" style="display: none;margin-top: 15px;margin-right: 15px;" action="" id="infoMadel">
    <div class="layui-form-item">
        <label class="layui-form-label">用户</label>
        <div class="layui-input-inline">
            <input type="text" name="username" required lay-verify="required" placeholder="请输入用户名" autocomplete="off"
                   class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">密码</label>
        <div class="layui-input-inline">
            <input type="password" name="password" required lay-verify="required" placeholder="请输入密码" autocomplete="off"
                   class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">类型</label>
        <div class="layui-input-inline">
            <select name="usertype" lay-verify="required">
                <option value="">请选择用户类型</option>
                <option value="1">超级管理员</option>
                <option value="2">普通用户</option>
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">部门</label>
        <div class="layui-input-inline">
            <select name="workshop" lay-verify="required">
                <option value="">请选择车间或部门</option>
                <option value="IT科">IT科</option>
                <option value="型材">型材</option>
                <option value="冲压">冲压</option>
                <option value="总六一">总六一</option>
                <option value="总六二">总六二</option>
                <option value="总三一">总三一</option>
                <option value="总三二">总三二</option>
                <option value="总五">总五</option>
                <option value="总四">总四</option>
                <option value="涂装">涂装</option>
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">管理员名</label>
        <div class="layui-input-inline">
            <input type="text" name="managername" required lay-verify="required" placeholder="请输入用户名" autocomplete="off"
                   class="layui-input">
        </div>
    </div>
    <div class="layui-form-item" style="margin-top: 100px">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
        </div>
    </div>
</form>
</body>
</html>
