<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>操作日志</title>
    <link rel="stylesheet" href="/layui/css/layui.css">
</head>
<body>
<div>
    <ul class="layui-nav">
        <li class="layui-nav-item"><a href="/imagesShow">图库</a></li>
        <li class="layui-nav-item"><a href="/users">用户</a></li>
        <li class="layui-nav-item"><a href="/imagesManager">图纸管理</a></li>
        <li class="layui-nav-item layui-this"><a href="/actionsLogs">操作日志</a></li>
        <li class="layui-nav-item" style="float: right">
            <a href="javascript:;"><span id="manager_name"></span></a>
            <dl class="layui-nav-child" style="z-index: 999">
                <dd><a id="logoutBtn">退出登录</a></dd>
            </dl>
        </li>
    </ul>
    <table id="demo" lay-filter="test"></table>
</div>
<!-- 引入 layui.js 的 <script> 标签最好放置在 html 末尾 -->
<script src="/layui/layui.js"></script>
<script>
    layui.use(function () {
        const layer = layui.layer;
        const loadStart = layer.load();
        layui.$.ajax({
            url: '/isLogin', //提交接口
            type: 'get',
            data: {token: localStorage.getItem('token')},
            success: function (res) {
                layer.close(loadStart);
                const {user_type, manager_name} = res;
                if (res.code != 0) {
                    window.location.href = '/';
                } else {
                    if (user_type == 2 || user_type == 3) window.location.href = '/imagesShow';
                    document.getElementById('manager_name').innerHTML = '<i class="layui-icon layui-icon-rate-solid"></i> ' + manager_name;
                }
            },
            error: function (mas, textStatus, errorThrown) {
                layer.msg('网络错误，请联系管理员');
                layer.close(loadStart);
            }
        });
        document.getElementById('logoutBtn').onclick = function () {
            layer.open({
                title: '',
                content: '确认退出登录吗？',
                yes: function (index) {
                    localStorage.setItem('token', '');
                    window.location.href = '/';
                    layer.close(index);
                },
            });
        }
    });
    layui.use('table', function () {
        const table = layui.table;
        //第一个实例
        table.render({
            elem: '#demo',
            url: '/getLogs',  //数据接口
            page: true, //开启分页
            toolbar: '#toolbarDemo',
            defaultToolbar: [],
            cols: [[ //表头
                {field: 'id', title: 'ID'},
                {field: 'manager_name', title: '操作员'},
                {field: 'action_name', title: '行为'},
                {field: 'change_from', title: '分类'},
                {field: 'change_name', title: '名字'},
                {field: 'manage_time', title: '时间'},
            ]],
            done: function (res, page, count) {
                const $ = layui.$;
                $("[data-field='manage_time']").children().each(function () {
                    const timeNumber = $(this).text() * 1;
                    const time = new Date(timeNumber).toLocaleString();
                    if (timeNumber > 100) $(this).text(time)

                })
            }
        });
    });
</script>
</body>
</html>
